extends layout

block content
    div#userName=username
    div#phaser-example(style='display: none;')
    div
        ul#roomNames
    div
    form#newRoom(role='form', style='max-width: 300px;')
        .form-group
            input.form-control(type='text', name="roomName", placeholder='Enter room Name')
        button.btn.btn-default(type='submit') Submit

    script(src='http://code.jquery.com/jquery.js')
    script(src='https://cdn.socket.io/socket.io-1.3.7.js')
    script(src='/javascripts/phaser.min.js')
    script(src='/javascripts/game.js')

